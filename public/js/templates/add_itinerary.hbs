<div class='row'>
  <div class="col-md-6">
    <h2>Add New Itinerary Item:</h2>
  </div>
</div>

<table class="table">
  <thead>
    <th>Activity</th>
    <th>Date</th>
	<th>Time</th>
  </thead>
  <tbody>
    <tr>
    <td>{{view Ember.TextField valueBinding="itin-name" id="itin-name" classNames='form-control'}}</td>
    <td>{{view Ember.TextField valueBinding="itin-date" id="itin-date" classNames='form-control'}}</td>
    <td>{{view Ember.TextField valueBinding="itin-time" id="itin-time" classNames='form-control'}}</td>
</table>
  <button type="submit" class='btn btn-default'>Add</button>





