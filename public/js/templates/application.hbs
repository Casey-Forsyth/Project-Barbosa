<div id="wrap">
  <div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button class="navbar-toggle" data-target=".navbar-collapse"
        data-toggle="collapse" type="button"><span class="sr-only">Toggle
        navigation</span></button>{{#link-to 'index' classNames="navbar-brand"}}Project
        Barbosa{{/link-to}}
      </div>

      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li>{{#link-to 'index'}}Home{{/link-to}}</li>
          <li>{{#link-to 'trips'}}Trips{{/link-to}}</li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          {{#if session.isAuthenticated}}
            <li class="dropdown">
              <a href="#" data-toggle="dropdown" class="dropdown-toggle">
                {{#if session.name}}
                  {{session.name}}
                {{else}}
                  {{session.email}}
                {{/if}}
                &nbsp;<i class="caret"></i>
              </a>
              <ul class="dropdown-menu">
                <li><a {{ action 'invalidateSession' }}>Logout</a></li>
              </ul>
            </li>
          {{else}}
            <li>{{#link-to 'login'}}<i class="fa fa-sign-in"></i>Login{{/link-to}}</li>
            <li>{{#link-to 'signup'}}<i class="fa fa-user"></i>Create Account{{/link-to}}</li>
          {{/if}}
        </ul>
      </div>
    </div>
  </div>

  <div class="container">
    {{outlet}}
	{{outlet modal}}
  </div>
</div>

