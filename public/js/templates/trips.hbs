<style>
  .listLink {
    color:black;
    text-decoration: none;
  }

  .listLink:hover {
    color:black;
    text-decoration: none;
  }
</style>

<div class='row'>
  <div class="col-md-6">
    <h2>Trips</h2>
  </div>
  <div class="col-md-6">
    {{#linkTo "new_trip" classNames="btn btn-primary pull-right"}}Create New Trip{{/linkTo}}
  </div>
</div>

<ul class="media-list">
 {{#each trip in controller}}
    <li class="media">
      DEBUG INFO: Packing List Size: ({{trip.packingItems.length}})
      {{#linkTo "trip" trip classNames="pull-left"}}
        {{makeMap trip}}
      {{/linkTo}}
      {{#linkTo "trip" trip classNames="listLink"}}
        <div class="media-body">
          <h4 class="media-heading">{{ trip.name }}</h4>
          Date: {{trip.date}}<br>
          User: {{ trip.user.profile.name }}<br>
          Location: {{ trip.location }}
        </div>
      {{/linkTo}}
    </li>
  {{/each}}
</ul>
