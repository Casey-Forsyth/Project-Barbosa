<style>


.listLink 
{
  color:black;
  text-decoration: none;
}

.listLink:hover
{
  color:black;
  text-decoration: none;
}

</style>
<div class='row'>
  <div class="col-md-6">
    <h2>Trips</h2>
  </div>
  <div class="col-md-6">
    {{#linkTo "new_trip" classNames="btn btn-primary pull-right"}}Create New Trip{{/linkTo}}
  </div>
</div>

<ul class="media-list">

 {{#each trip in controller}}

    
    <li class="media">
    {{#linkTo "trip" trip classNames="pull-left"}}
        {{makeMap trip}}
    {{/linkTo}}
      <div class="media-body">
        {{#linkTo "trip" trip classNames="listLink"}}
          <h4 class="media-heading">{{ trip.name }}</h4>

            Date: {{trip.date}}<br>
            User: {{ trip.user }}<br>
            Location: {{ trip.location }}
        {{/linkTo}}
      </div>
    </li>
    

{{/each}}
</ul>